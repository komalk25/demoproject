<div id="<%= dom_id product %>">
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag product.image_url(:thumb).to_s %>
  </p>
  <p>
    <strong>Seller:</strong>
    <%= product.seller_id %>
  </p>

</div>


