<div class="d-flex justify-content-md-center align-items-center vh-80">
<%= form_with model: [ @seller, product ] do |form|%> 
  <div class="card" style="width: 38rem;">
  <div class="card-body">
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :image, class: "form-label"%><br>
    <%= form.file_field :image,  class: "form-control", style: "width:550px"%>
  </div>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", style: "width:550px" %>
  </div class="mb-3">

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", style: "width:550px" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-control", style: "width:550px" %>
  </div>

  <div class="mb-3">
    <%= form.label :video, class: "form-label" %>
    <%= form.file_field :video, class: "form-control", style: "width:550px" %>
  </div>
  <div>
    <%= form.submit %>
  </div>
  </div>
  </div>
<% end %>
</div>